@{
    AppConfiguration app = new AppConfiguration();
    var hostUrl = app.HostAddress;
    var ipFirstLine = app.IpFirstLine;
    var ip = @ViewBag.Ip;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
